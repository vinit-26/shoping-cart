<div class="row">
  <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3 {{#if noMessages}}hidden{{/if}}">
    <div class="alert alert-success">
      {{ successMsg }}
    </div>
  </div>
</div>

{{#each products}}
<div class="row">
  {{#each this}}
  <div class="col-sm-6 col-md-4 my-2">
    <div class="card">
      <div class="thumbnail my-2">
        <img class="img-responsive mx-2" src="{{this.imagePath}}" alt="...">
        <div class="caption">
          <h3 class="mx-2">{{this.title}}</h3>
          <p class="description mx-2">{{this.description}}</p>
          <div class="clearfix mx-2">
            <div class="price float-left">&#x20B9;{{this.price}}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right" role="button">Add to Cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}