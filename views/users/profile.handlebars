<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
        <div class="card">
            <div class="card-body">
                <ul class="list-group">
                    {{#each this.items}}
                    <li class="list-group-item">
                        {{this.item.title}} | {{ this.qty }} units
                        <span class="badge badge-secondary float-right">&#x20B9;{{this.price}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="card-footer"><strong class="float-right">Total Price:
                    &#x20B9;{{ this.cart.totalPrice }}</strong></div>
        </div>
        {{/each}}
    </div>
</div>